<Window x:Class="SecantMethod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secant Method Solver" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Enter Function: f(x) = " FontSize="16" />
            <TextBox x:Name="TxtFunction"  />

            <Label Content="Initial guess x0:" FontSize="16" />
            <TextBox x:Name="TxtX0" />

            <Label Content="Initial guess x1:" FontSize="16" />
            <TextBox x:Name="TxtX1" />

            <Label Content="Number of Iterations:" FontSize="16" />
            <TextBox x:Name="TxtIterations" />

            <Button Content="Calculate" Click="OnCalculateClick" />
            <DataGrid x:Name="ResultsGrid" AutoGenerateColumns="True" />
        </StackPanel>
    </Grid>
    

</Window>